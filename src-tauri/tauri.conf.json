{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StimEval",
  "version": "1.1.2",
  "identifier": "com.dinosoldic.StimEval",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "StimEval",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "copyright": "Â© 2025 Dino Soldic",
    "windows": {
      "nsis": {
        "installMode": "perMachine"
      }
    },
    "macOS": {
      "dmg": {}
    },
    "linux": {
      "deb": {
        "depends": ["libgtk-3-0", "libayatana-appindicator3-1", "librsvg2-2"]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
